<p style="color: green"><%= notice if notice%></p>
<p style="color: green"><%= alert if alert%></p>

<div class="my-8 text-center space-y-4">
  <h1 class="text-4xl font-bold text-center">
    Treinos
  </h1>


  <div id="treinos"  class="grid grid-cols-3 gap-4">
    <% @treinos.each do |treino| %>
      <p>
        <%= link_to "#{treino.nome}", treino %>
      </p>
    <% end %>
  </div>

  <%= link_to "New treino", new_treino_path, class: "inline-block px-4 py-2 rounded-md bg-blue-300 hover:bg-blue-400" %>
  <%= render partial: '/logado' %>

</div>