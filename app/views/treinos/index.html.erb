<section class="min-vh-100" style="background-color: #1e1e1e;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-10">
        <div class="text-3xl text-center">
          <p style="color: green"><%= notice if notice%></p>
          <p style="color: green"><%= alert if alert%></p>
          <div class="card">

            <div class="card-header p-3" >
              <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Treinos</h5>
            </div>

            <div class="card-body">
                <table class="table table-hover">
                  <tbody>
                    <% @treinos.each do |treino| %>
                      <tr>
                        <% if treino.exercicios.all? { |ex| ex.concluido } %>
                          <td><%= link_to "#{treino.nome.titleize} (ConcluÃ­do)", treino, class: "text-decoration-none link-dark link-opacity-50-hover" %></td>
                        <% else %>
                          <td><%= link_to "#{treino.nome.titleize}", treino, class: "text-decoration-none link-dark link-opacity-50-hover" %></td>
                        <% end %>
                        <td class="text-end">
                          <div class="d-flex justify-content-end">
                            <%= button_to "Copiar", copiar_treino_treinos_path(id: treino.id), method: :post, class: "btn btn-dark btn-sm me-2" %>
                            <%= button_to treino, method: :delete, form: { data: { turbo_confirm: 'Tem certeza?' } }, class: "btn btn-danger btn-sm" do %>
                              <i class="fa-regular fa-trash-can"></i>
                            <% end %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <%= button_to "Novo treino", new_treino_path, method: :get, class: "btn btn-dark" %>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
