<div class="card scrollbar-warning">
  <%= form_with(model: treino, data: { controller: "render-response" }, class: "space-y-4") do |form| %>
    <% if treino.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(treino.errors.count, "error") %> prohibited this treino from being saved:</h2>

        <ul>
          <% treino.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <div class="card-header p-3">
        <h5 class="mb-0"><i class="fas fa-tasks me-2"></i><%= @treino.nome %></h5>
      </div>

      <div class="card-body">
        <fieldset>
          <%= form.label :nome, style: "display: block" %>
          <%= form.text_field :nome, class: "px-2 py-1 border w-full rounded-md" %>
        </fieldset>

        <div id="exercicios" class="mb-2">
          <%= render @treino.exercicios %>
        </div>

        <div class="mb-2">
          <%= link_to new_exercicio_path, data: { turbo_stream: true }, class: "text-decoration-none link-dark" do %>
            Adicionar exerc√≠cio <i class="fa-solid fa-plus"></i>
          <% end %>
        </div>

          <% if form.object.persisted? %>
            <%= form.submit "Atualizar", class: "btn btn-dark" %>
          <% else %>
            <%= form.submit "Criar", class: "btn btn-dark" %>
          <% end %>
      </div>



  <% end %>

</div>




