<section class="min-vh-100" style="background-color: #1e1e1e;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-10">
        <div class="text-3xl text-center text-white">
          <p style="color: green"><%= notice if notice%></p>
          <p style="color: green"><%= alert if alert%></p>

          <h1>TREINO EM DIA</h1>
          <div class="card">

            <div class="card-header p-3" >
              <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Treinos prontos</h5>
            </div>

            <div class="card-body">
              <table class="table table-hover">
                <tbody>
                <% @treinos_prontos.each do |treino| %>
                  <tr>
                    <td><%= link_to "#{treino.nome.titleize}", treino,
                                    class: "text-decoration-none link-dark link-opacity-50-hover" %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>

            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>

