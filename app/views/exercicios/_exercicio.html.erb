<div>
  <%= fields_for "treino[exercicios_attributes][#{turbo_id_for(exercicio)}]", exercicio do |ff| %>
    <fieldset class="mb-4" id="<%= turbo_id_for(exercicio) %>">
      <legend>Exerc√≠cio</legend>
      <%= ff.label :nome %>
      <%= ff.text_field :nome %>
      <%= ff.label :nivel %>
      <%= ff.select :nivel, options_for_select((1..5).to_a, exercicio.nivel) %>
      <%= ff.label :codependencia %>
      <%= ff.collection_select :codependencia, Exercicio.where(treino: @treino).order(:nome), :id, :nome, include_blank: "Nenhuma" %>
      <%= ff.label :concluido %>
      <%= ff.check_box :concluido %>
      <%= ff.hidden_field :id %>
      <%= button_tag formaction: exercicio_path(turbo_id_for(exercicio)), formmethod: :delete, class: "btn btn-danger btn-sm" do %>
        <i class="fa-regular fa-trash-can"></i>
      <% end %>
    </fieldset>
  <% end %>
</div>

