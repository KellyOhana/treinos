<%= fields model: @treino do |form| %>
  <%= form.fields_for :exercicios, child_index: params[:index] do |exercicio_form| %>
    <%= turbo_stream.replace "add-exercicio" do %>
      <%= form.submit "Add exercicio",
                      formaction: exercicio_path(params[:index].to_i + 1),
                      formmethod: :post,
                      formnovalidate: true,
                      id: "add-exercicio" %>
    <% end %>

    <%= turbo_stream.append "exercicios" do %>
      <%= render "form", form: exercicio_form %>
    <% end %>
  <% end %>
<% end %>